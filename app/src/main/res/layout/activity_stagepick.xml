<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_gamepick"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.html5killer.utility.CoverFlow android:id="@id/coverflow" android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtStatus" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtLevel" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtNumDiff" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtDatePlayed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:id="@id/txtErrorsMade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
